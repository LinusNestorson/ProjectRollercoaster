@inject IFeedService FeedService
@inject ISpecificFeedService SpecificFeedService
@implements IDisposable

<div class=subSection>
    @foreach (var item in FeedService.Feeds)
    {
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="newsfeed">
                <p @onclick="() => SpecificFeedService.GetSpecificFeed(item.Link)">@item.Name</p>
            </NavLink>
        </div>
    }
</div>

@code {

    protected override void OnInitialized()
    {
        FeedService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        FeedService.OnChange -= StateHasChanged;
    }


}
