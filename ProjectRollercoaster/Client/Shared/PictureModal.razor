@inject IJSRuntime js
@inject IFeedService FeedService

<link rel="stylesheet" href="css/fontawesome/css/fontawesome.min.css" />

<div class="modal" tabindex="-1" role="dialog" style="display: block;">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Choose image for feed</h5>
                <button type="button" class="close" aria-label="Close" @onclick="OnClose">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <button class="fas fa-user" @onclick="@(() => OnSetImage.InvokeAsync("fas fa-user"))"></button>
                <button id="football" class="far fa-futbol"></button>

            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-primary">Save changes</button>
                <button type="button" class="btn btn-secondary" @onclick="OnClose">Close</button>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] 
    public EventCallback OnClose { get; set; }

    public Feed Image { get; set; }

    [Parameter]
    public EventCallback<string> OnSetImage { get; set; }
}
